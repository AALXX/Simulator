{
    "root": true,
    "extends": "next/core-web-vitals",
    "plugins": ["react", "@typescript-eslint"],
    "ignorePatterns": ["postcss.config.js", "tailwind.config.js"],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "react/display-name": 0
    }
}
